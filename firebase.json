{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
  "rewrites": [
    {
        "source": "/api/v1/**",
        "function": "api"
    },
    {
        "source": "/failure",
        "destination": "/failure.html"
    },
    {
        "source": "/success",
        "destination": "/success.html"
    }
  ]
  }
}
